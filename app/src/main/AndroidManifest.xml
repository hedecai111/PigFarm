<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cd.pigfarm">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.ZzcActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.YfcActivity" android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>