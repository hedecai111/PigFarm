<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--横向线性布局风格-->
    <style name="linear_style">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginTop">0.5dp</item>
    </style>


    <!--输入提示的风格-->
    <style name="textview_style">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edittext_style_zqjg" parent="edittext_style">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="textview_style_zqjg" parent="textview_style">
        <item name="android:layout_weight">1.5</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--输入编辑框的风格-->
    <style name="edittext_style">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/black_gray_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:entries">@array/spingarr33</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="linear_style_zsjz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="zs_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/zs_title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textview_driver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_little</item>
    </style>

    <style name="title_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title_textview_fu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/zs_title_size_f</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:text">下一步</item>
    </style>

    <dimen name="zs_title_size_f">16sp</dimen>
</resources>
